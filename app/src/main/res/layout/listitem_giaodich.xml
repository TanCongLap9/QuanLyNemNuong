<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_receipt_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listitem_giaodich_magd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAGD"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listitem_giaodich_makh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person_24dp"
                android:drawablePadding="4dp"
                android:text="MAKH" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (" />

            <TextView
                android:id="@+id/listitem_giaodich_hotenkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOTENKH" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listitem_giaodich_manv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_badge_24dp"
                android:drawablePadding="4dp"
                android:text="MANV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (" />

            <TextView
                android:id="@+id/listitem_giaodich_hotennv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOTENNV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>