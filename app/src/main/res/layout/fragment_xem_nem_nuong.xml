<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:attr/colorBackground"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ui.fragment.XemNemNuongFragment"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/xem_nem_nuong_ten_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/xem_nem_nuong_don_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32.000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="&#x20AB;"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/xem_nem_nuong_danh_gia_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_24dp" />

                <ImageView
                    android:id="@+id/xem_nem_nuong_danh_gia_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_24dp" />

                <ImageView
                    android:id="@+id/xem_nem_nuong_danh_gia_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_24dp" />

                <ImageView
                    android:id="@+id/xem_nem_nuong_danh_gia_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_24dp" />

                <ImageView
                    android:id="@+id/xem_nem_nuong_danh_gia_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_24dp" />

                <TextView
                    android:id="@+id/xem_nem_nuong_so_danh_gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/xem_nem_nuong_hinh_anh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/nem_nuong_mau_5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Mô tả"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xem_nem_nuong_mo_ta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="fd4fa5 a4sf654 as64fasd 4f4 w94e8f 9a4fsd 4fw 165s1f6 1w98 af1 6w51f6w1s 1af98a s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Đơn vị chế biến"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xem_nem_nuong_tennpp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="fd4fa5 a4sf654 as64fasd 4f4 w94e8f 9a4fsd 4fw 165s1f6 1w98 af1 6w51f6w1s 1af98a s" />

        <TextView
            android:id="@+id/xem_nem_nuong_dia_chi_npp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="fd4fa5 a4sf654 as64fasd 4f4 w94e8f 9a4fsd 4fw 165s1f6 1w98 af1 6w51f6w1s 1af98a s" />

        <Button
            android:id="@+id/xem_nem_nuong_mua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua" />

    </LinearLayout>
</ScrollView>