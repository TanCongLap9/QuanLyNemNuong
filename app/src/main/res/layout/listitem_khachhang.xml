<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_person_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listitem_khachhang_hotenkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOTENKH"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listitem_khachhang_makh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_key_24dp"
            android:drawablePadding="4dp"
            android:text="MAKH" />

        <TextView
            android:id="@+id/listitem_khachhang_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_alternate_email_24dp"
            android:drawablePadding="4dp"
            android:text="Email" />

        <TextView
            android:id="@+id/listitem_khachhang_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_24dp"
            android:drawablePadding="4dp"
            android:text="SDT" />

    </LinearLayout>
</LinearLayout>